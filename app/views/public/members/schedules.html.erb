          <% if schedule.afternoon_off? %>
            <% if schedule.member_id == current_member.id %>
              <td><%= schedule.day %></td>
              <td><%= schedule.member.department %></td>
              <td><%= schedule.member.last_name %></td>
              <td><%= link_to "編集",  edit_schedule_path(schedule.id), class:"btn btn-success" %> </td>
