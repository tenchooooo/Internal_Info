            <% end %>
          <% end %>
        </tr>
        <% end %>
      </table>
      <p>その他情報</p>
      <table class= "table table border mb-5">
        <% @schedules.each do |schedule| %>
        <tr>
          <% if schedule.other? %>
            <% if schedule.member_id == current_member.id %>
              <td><%= schedule.day %></td>
              <td><%= schedule.member.department %></td>
              <td><%= schedule.member.last_name %></td>
